    <script>
        const loginForm = document.getElementById('login-form');
        const errorMsg = document.getElementById('error-msg');
        errorMsg.style.display = 'none';
        loginForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const user = document.getElementById('username').value.trim();
            const pass = document.getElementById('password').value;
            if (user === 'IDEAL' && pass === 'IDEAL@1233') {
                document.getElementById('login-section').style.display = 'none';
                document.getElementById('career-section').style.display = 'block';
                document.body.classList.remove('dashboard-bg');
                document.body.style.background = '#183570';
            } else {
                errorMsg.style.display = "block";
            }
        });
        document.getElementById('bsc-ai-course').onclick = function() {
            document.getElementById('career-section').style.display = "none";
            document.getElementById('dashboard-section').style.display = "block";
            document.body.classList.add('dashboard-bg');
            document.body.style.background = '#f6f8fc';
            showSection('overview');
        };

        function showSection(id) {
            document.querySelectorAll('.section-content').forEach(el => el.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            // Desktop
            document.querySelectorAll('.sidebar .nav-link').forEach(el => el.classList.remove('active'));
            let link = document.querySelector('.sidebar .nav-link[onclick*="' + id + '"]');
            if (link) link.classList.add('active');
            // Mobile
            document.querySelectorAll('.mobile-nav .nav-link').forEach(el => el.classList.remove('active'));
            let mlink = document.querySelector('.mobile-nav .nav-link[onclick*="' + id + '"]');
            if (mlink) mlink.classList.add('active');
        }
    </script>
